<%
json = {
  tracking_tool: {
    type: 'generic',
    attributes: {
      url_pattern: 'https://github.com/gocd/api.go.cd/issues/${ID}',
      regex: '##(d+)'
    }
  }
}
%>

<%=
describe_sub_object 'The tracking tool object', json: json, html_id: 'pipeline-config-tracking-tool-object' do
  type                    'String', 'The type of the tracking tool.', one_of: %w(mingle generic)
  attributes              'Object', 'The attributes of the tracking tool. See attributes for [generic](#pipeline-config-tracking-tool-generic) and [mingle](#pipeline-config-tracking-tool-mingle) tracking tools.'
end
%>

